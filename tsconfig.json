{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    //"lib": [
    //  "esnext",
    //  "dom",
    //  "dom.iterable",
    //  "scripthost"
    //],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}